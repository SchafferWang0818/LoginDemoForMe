<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_login_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/rectangle_notify"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="34px"
        android:layout_marginLeft="34px"
        android:layout_marginRight="22px"
        android:layout_marginTop="34px"

        android:src="@drawable/dengluchenggong" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="34px"
        android:gravity="center"
        android:text="恭喜登录成功!"
        android:textColor="#ffffff"
        android:textSize="30px" />
</LinearLayout>