<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="524px"
    android:layout_height="308px"
    android:background="@drawable/shape_rectangle_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_dif_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        android:src="@drawable/shuruicon" />

    <TextView
        android:id="@+id/dialog_dif_tv"
        android:layout_width="524px"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_dif_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44px"
        android:layout_marginTop="40px"
        android:gravity="center_horizontal"
        android:text="@string/str_dif_notify"
        android:textSize="28px" />

    <Button
        android:id="@+id/dialog_dif_btn"
        android:layout_width="524px"
        android:layout_height="82px"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/dialog_dif_tv"
        android:background="@drawable/shape_rectangle_dialog_btn"
        android:text="@string/str_sure"
        android:textColor="#ffffff" />

</LinearLayout>